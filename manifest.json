{
  "name": "Send-Cookies-with-Token-Chrome-Extension",
  "version": "1.0.0",
  "author": "Shahzaib",
  "description": "An extension to send cookies",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "nativeMessaging"
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_title": "Cookies Sender",
    "default_icon": "images/icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["src/easyhttp3.js", "src/app.js"],
    "persistent": false
  },
  "manifest_version": 2
}
